    <script>
        // å®šä¹‰å˜é‡å­˜å‚¨é€‰ä¸­çš„å¿ƒæƒ…
        let selectedMood = "";
        // è·å–æ‰€æœ‰å¿ƒæƒ…æŒ‰é’®
        const moodBtns = document.querySelectorAll('.mood-btn');
        // è·å–è¾“å…¥æ¡†ã€æäº¤æŒ‰é’®ã€å±•ç¤ºåŒºåŸŸ
        const moodText = document.getElementById('mood-text');
        const submitBtn = document.querySelector('.submit-btn');
        const recordResult = document.getElementById('record-result');

        // ä¸ºå¿ƒæƒ…æŒ‰é’®æ·»åŠ ç‚¹å‡»äº‹ä»¶
        moodBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // ç§»é™¤æ‰€æœ‰æŒ‰é’®çš„é€‰ä¸­æ ·å¼
                moodBtns.forEach(b => b.style.opacity = "1");
                // ä¸ºå½“å‰ç‚¹å‡»çš„æŒ‰é’®æ·»åŠ é€‰ä¸­æ ·å¼
                btn.style.opacity = "0.7";
                // è®°å½•é€‰ä¸­çš„å¿ƒæƒ…
                selectedMood = btn.textContent;
            });
        });

        // æäº¤æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        submitBtn.addEventListener('click', () => {
            // è·å–è¾“å…¥çš„æ–‡æœ¬
            const text = moodText.value.trim();
            // è·å–å½“å‰æ—¶é—´
            const now = new Date();
            const timeStr = now.toLocaleString('zh-CN');

            // éªŒè¯è¾“å…¥
            if (!selectedMood) {
                alert("è¯·å…ˆé€‰æ‹©ä½ çš„å¿ƒæƒ…ï½");
                return;
            }
            if (!text) {
                alert("è¯·å†™ä¸‹ä½ çš„ä»Šæ—¥æ„Ÿæƒ³ï½");
                return;
            }

            // å±•ç¤ºè®°å½•å†…å®¹
            recordResult.innerHTML = `
                <p><strong>æ—¶é—´ï¼š</strong>${timeStr}</p>
                <p><strong>å¿ƒæƒ…ï¼š</strong>${selectedMood}</p>
                <p><strong>æ„Ÿæƒ³ï¼š</strong>${text}</p>
            `;

            // æ¸…ç©ºè¾“å…¥æ¡†
            moodText.value = "";
            // é‡ç½®å¿ƒæƒ…é€‰ä¸­çŠ¶æ€
            moodBtns.forEach(b => b.style.opacity = "1");
            selectedMood = "";

            // æç¤ºä¿å­˜æˆåŠŸ
            alert("å¿ƒæƒ…è®°å½•ä¿å­˜æˆåŠŸå•¦ï½");
        });
    </script>
